@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model MediaCenterControl.Models.Damage

@{
    ViewBag.Title = "Arhiviranje kvara";
}

<h2>Jeste li sigurni da želite arhivirati ovaj kvar?</h2>

<div>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CarBrand)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CarBrand)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CarModel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CarModel)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayTextFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ServiceCenter)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ServiceCenter)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ServiceDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ServiceDate)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Arhiviraj" class="btn btn-lg btn-default btn-success" /> |
            @Html.ActionLink("Povratak na listu", "Index")
        </div>
    }
</div>

